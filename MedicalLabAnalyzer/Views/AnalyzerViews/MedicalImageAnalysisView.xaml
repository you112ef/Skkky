<UserControl x:Class="MedicalLabAnalyzer.Views.AnalyzerViews.MedicalImageAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI, Arial"
             d:DesignHeight="900" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Medical Image Viewer Styles -->
        <Style x:Key="ToolbarStyle" TargetType="materialDesign:Card">
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style x:Key="ImageViewerStyle" TargetType="materialDesign:Card">
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp6"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="AnalysisResultStyle" TargetType="materialDesign:Card">
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="ToolButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignFlatToggleButton}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MeasurementTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
        </Style>

        <Style x:Key="ResultValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ResultLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header & Toolbar -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Header and Toolbar -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="Auto"/> <!-- Toolbar -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <materialDesign:Card Grid.Row="0" Style="{StaticResource ToolbarStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ImageSearch" 
                                               Width="32" Height="32" 
                                               Foreground="#1976D2"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="تحليل الصور الطبية" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="#1976D2"/>
                            <TextBlock Text="Medical Image Analysis with AI" 
                                     FontSize="12"
                                     Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- AI Status -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        <Border Background="{Binding AIStatusBrush}"
                              CornerRadius="12" 
                              Padding="8,4" 
                              Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Brain" 
                                                       Width="16" Height="16" 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AIStatusText}" 
                                         Foreground="White" 
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Load Image Button -->
                    <Button Grid.Column="2" 
                          Content="تحميل صورة"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Background="#2196F3"
                          BorderBrush="#2196F3"
                          Command="{Binding LoadImageCommand}">
                        <Button.ToolTip>
                            <ToolTip Content="تحميل صورة طبية للتحليل"/>
                        </Button.ToolTip>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="1" Style="{StaticResource ToolbarStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Tools -->
                        <ColumnDefinition Width="*"/>    <!-- Zoom & Pan -->
                        <ColumnDefinition Width="Auto"/> <!-- Analysis -->
                    </Grid.ColumnDefinitions>

                    <!-- Measurement Tools -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="أدوات القياس:" 
                                 VerticalAlignment="Center" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,8,0"/>

                        <ToggleButton Style="{StaticResource ToolButtonStyle}"
                                    IsChecked="{Binding IsPointerToolSelected}"
                                    Command="{Binding SelectPointerToolCommand}"
                                    ToolTip="مؤشر">
                            <materialDesign:PackIcon Kind="CursorDefault" Width="20" Height="20"/>
                        </ToggleButton>

                        <ToggleButton Style="{StaticResource ToolButtonStyle}"
                                    IsChecked="{Binding IsRulerToolSelected}"
                                    Command="{Binding SelectRulerToolCommand}"
                                    ToolTip="مسطرة">
                            <materialDesign:PackIcon Kind="Ruler" Width="20" Height="20"/>
                        </ToggleButton>

                        <ToggleButton Style="{StaticResource ToolButtonStyle}"
                                    IsChecked="{Binding IsAngleToolSelected}"
                                    Command="{Binding SelectAngleToolCommand}"
                                    ToolTip="قياس الزاوية">
                            <materialDesign:PackIcon Kind="AngleAcute" Width="20" Height="20"/>
                        </ToggleButton>

                        <ToggleButton Style="{StaticResource ToolButtonStyle}"
                                    IsChecked="{Binding IsAreaToolSelected}"
                                    Command="{Binding SelectAreaToolCommand}"
                                    ToolTip="قياس المساحة">
                            <materialDesign:PackIcon Kind="VectorSquare" Width="20" Height="20"/>
                        </ToggleButton>

                        <ToggleButton Style="{StaticResource ToolButtonStyle}"
                                    IsChecked="{Binding IsCountToolSelected}"
                                    Command="{Binding SelectCountToolCommand}"
                                    ToolTip="عدّاد الخلايا">
                            <materialDesign:PackIcon Kind="Counter" Width="20" Height="20"/>
                        </ToggleButton>

                        <Separator Orientation="Vertical" Margin="8,4"/>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                              Command="{Binding ClearMeasurementsCommand}"
                              ToolTip="مسح القياسات">
                            <materialDesign:PackIcon Kind="Eraser" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>

                    <!-- Zoom and Pan Controls -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                              Command="{Binding ZoomInCommand}"
                              ToolTip="تكبير">
                            <materialDesign:PackIcon Kind="MagnifyPlus" Width="20" Height="20"/>
                        </Button>

                        <Slider Name="ZoomSlider"
                              Width="120"
                              Minimum="0.1"
                              Maximum="5.0"
                              Value="{Binding ZoomLevel, Mode=TwoWay}"
                              TickPlacement="None"
                              IsSnapToTickEnabled="False"
                              Margin="8,0"/>

                        <TextBlock Text="{Binding ZoomLevel, StringFormat='{0:P0}'}" 
                                 VerticalAlignment="Center"
                                 FontSize="11"
                                 MinWidth="40"
                                 TextAlignment="Center"/>

                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                              Command="{Binding ZoomOutCommand}"
                              ToolTip="تصغير">
                            <materialDesign:PackIcon Kind="MagnifyMinus" Width="20" Height="20"/>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                              Command="{Binding FitToScreenCommand}"
                              ToolTip="ملء الشاشة">
                            <materialDesign:PackIcon Kind="FitToScreen" Width="20" Height="20"/>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                              Command="{Binding ActualSizeCommand}"
                              ToolTip="الحجم الفعلي">
                            <materialDesign:PackIcon Kind="ActualSize" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>

                    <!-- Analysis Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="تحليل تلقائي"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Background="#4CAF50"
                              BorderBrush="#4CAF50"
                              Command="{Binding StartAutoAnalysisCommand}"
                              IsEnabled="{Binding HasImage}">
                            <Button.ToolTip>
                                <ToolTip Content="بدء التحليل التلقائي بالذكاء الاصطناعي"/>
                            </Button.ToolTip>
                        </Button>

                        <Button Content="حفظ النتائج"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Background="#FF9800"
                              BorderBrush="#FF9800"
                              Command="{Binding SaveResultsCommand}"
                              IsEnabled="{Binding HasResults}"
                              Margin="4,0,0,0">
                            <Button.ToolTip>
                                <ToolTip Content="حفظ النتائج والقياسات"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Image Viewer -->
                <ColumnDefinition Width="*"/>  <!-- Results Panel -->
            </Grid.ColumnDefinitions>

            <!-- Image Viewer -->
            <materialDesign:Card Grid.Column="0" Style="{StaticResource ImageViewerStyle}">
                <Grid ClipToBounds="True">
                    <!-- Scroll Viewer for Pan and Zoom -->
                    <ScrollViewer Name="ImageScrollViewer"
                                ZoomMode="Enabled"
                                PanMode="Both"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                Background="Black">
                        <Grid>
                            <!-- Main Image -->
                            <Image Name="MedicalImageDisplay"
                                 Source="{Binding CurrentImageSource}"
                                 Stretch="None"
                                 RenderOptions.BitmapScalingMode="HighQuality"
                                 RenderOptions.EdgeMode="Aliased"/>

                            <!-- Measurement Overlay Canvas -->
                            <Canvas Name="MeasurementCanvas"
                                  Background="Transparent"
                                  MouseLeftButtonDown="OnCanvasMouseDown"
                                  MouseMove="OnCanvasMouseMove"
                                  MouseLeftButtonUp="OnCanvasMouseUp">

                                <!-- Rulers -->
                                <ItemsControl ItemsSource="{Binding Rulers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Line X1="{Binding StartX}" Y1="{Binding StartY}"
                                                X2="{Binding EndX}" Y2="{Binding EndY}"
                                                Stroke="#FFD700" StrokeThickness="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Measurement Text -->
                                <ItemsControl ItemsSource="{Binding MeasurementTexts}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#80000000" 
                                                  CornerRadius="4" 
                                                  Padding="4,2">
                                                <TextBlock Text="{Binding Text}" 
                                                         Style="{StaticResource MeasurementTextStyle}"
                                                         Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Count Markers -->
                                <ItemsControl ItemsSource="{Binding CountMarkers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="16" Height="16" 
                                                   Fill="#FF4444" 
                                                   Stroke="White" 
                                                   StrokeThickness="2">
                                                <Ellipse.ToolTip>
                                                    <ToolTip Content="{Binding Label}"/>
                                                </Ellipse.ToolTip>
                                            </Ellipse>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- AI Detection Results -->
                                <ItemsControl ItemsSource="{Binding DetectedObjects}"
                                            Visibility="{Binding ShowDetections, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{Binding DetectionColor}"
                                                  BorderThickness="2"
                                                  Width="{Binding Width}"
                                                  Height="{Binding Height}"
                                                  Background="Transparent">
                                                <Border.ToolTip>
                                                    <ToolTip>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding ObjectType}"/>
                                                            <TextBlock Text="{Binding Confidence, StringFormat='ثقة: {0:P1}'}"/>
                                                        </StackPanel>
                                                    </ToolTip>
                                                </Border.ToolTip>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Canvas>
                        </Grid>
                    </ScrollViewer>

                    <!-- Loading Overlay -->
                    <Grid Background="#80000000"
                        Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Loading" 
                                                   Width="48" Height="48" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center">
                                <materialDesign:PackIcon.RenderTransform>
                                    <RotateTransform/>
                                </materialDesign:PackIcon.RenderTransform>
                                <materialDesign:PackIcon.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                               From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </materialDesign:PackIcon.Triggers>
                            </materialDesign:PackIcon>
                            
                            <TextBlock Text="{Binding AnalysisStatusText}" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     HorizontalAlignment="Center"
                                     Margin="0,16,0,8"/>
                            
                            <ProgressBar Width="200" Height="6"
                                       Value="{Binding AnalysisProgress}"
                                       Foreground="#4CAF50"
                                       Background="#40FFFFFF"/>
                        </StackPanel>
                    </Grid>

                    <!-- Drop Zone -->
                    <Grid Background="#40000000"
                        Visibility="{Binding ShowDropZone, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloudUpload" 
                                                   Width="64" Height="64" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                            <TextBlock Text="اسحب الصور الطبية هنا" 
                                     Foreground="White" 
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="أو اضغط لتحديد الملفات" 
                                     Foreground="#E0E0E0" 
                                     FontSize="14"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text=".jpg, .png, .bmp, .tiff, .dcm" 
                                     Foreground="#BDBDBD" 
                                     FontSize="12"
                                     HorizontalAlignment="Center"
                                     Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Analysis Results Panel -->
            <ScrollViewer Grid.Column="1" 
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Image Information -->
                    <materialDesign:Card Style="{StaticResource AnalysisResultStyle}">
                        <StackPanel>
                            <TextBlock Text="معلومات الصورة" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"
                                     Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم:" FontSize="12" Foreground="#666666"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ImageFileName}" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="الحجم:" FontSize="12" Foreground="#666666"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ImageFileSize}" FontSize="12" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="الأبعاد:" FontSize="12" Foreground="#666666"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ImageDimensions}" FontSize="12" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="النوع:" FontSize="12" Foreground="#666666"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ImageFormat}" FontSize="12" FontWeight="SemiBold"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Manual Measurements -->
                    <materialDesign:Card Style="{StaticResource AnalysisResultStyle}">
                        <StackPanel>
                            <TextBlock Text="القياسات اليدوية" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"
                                     Margin="0,0,0,12"/>

                            <UniformGrid Columns="2">
                                <!-- Distance Measurements -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TotalDistance, StringFormat='{0:F2} μm'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="إجمالي المسافات" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Area Measurements -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TotalArea, StringFormat='{0:F2} μm²'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="إجمالي المساحات" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Angle Measurements -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding AverageAngle, StringFormat='{0:F1}°'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="متوسط الزوايا" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Cell Count -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CellCount}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="عدد الخلايا" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- AI Analysis Results -->
                    <materialDesign:Card Style="{StaticResource AnalysisResultStyle}"
                                       Visibility="{Binding HasAIResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="نتائج التحليل التلقائي" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"
                                     Margin="0,0,0,12"/>

                            <UniformGrid Columns="2">
                                <!-- Detected Objects -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DetectedObjectsCount}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="كائنات مكتشفة" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Cell Density -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CellDensity, StringFormat='{0:F1}/mm²'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="كثافة الخلايا" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Average Cell Size -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding AverageCellSize, StringFormat='{0:F1} μm'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="متوسط حجم الخلية" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Analysis Confidence -->
                                <Border Style="{StaticResource CASAMetricStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding AnalysisConfidence, StringFormat='{0:P1}'}" Style="{StaticResource ResultValueStyle}"/>
                                        <TextBlock Text="ثقة التحليل" Style="{StaticResource ResultLabelStyle}"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <!-- Object Types Distribution -->
                            <TextBlock Text="توزيع أنواع الكائنات" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"
                                     Margin="0,16,0,8"/>

                            <ItemsControl ItemsSource="{Binding ObjectTypes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                     Text="{Binding TypeName}" 
                                                     FontSize="12"
                                                     VerticalAlignment="Center"/>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Count}" 
                                                         FontSize="12"
                                                         FontWeight="Bold"
                                                         Foreground="{Binding TypeColor}"
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Percentage, StringFormat='({0:F1}%)'}" 
                                                         FontSize="11"
                                                         Foreground="#666666"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Image Enhancement Controls -->
                    <materialDesign:Card Style="{StaticResource AnalysisResultStyle}">
                        <StackPanel>
                            <TextBlock Text="تحسين الصورة" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"
                                     Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="السطوع:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider Grid.Row="0" Grid.Column="1" 
                                      Minimum="-100" Maximum="100" 
                                      Value="{Binding Brightness, Mode=TwoWay}"
                                      TickPlacement="None"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="التباين:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider Grid.Row="1" Grid.Column="1" 
                                      Minimum="-100" Maximum="100" 
                                      Value="{Binding Contrast, Mode=TwoWay}"
                                      TickPlacement="None"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="التشبع:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider Grid.Row="2" Grid.Column="1" 
                                      Minimum="-100" Maximum="100" 
                                      Value="{Binding Saturation, Mode=TwoWay}"
                                      TickPlacement="None"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="الحدة:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider Grid.Row="3" Grid.Column="1" 
                                      Minimum="0" Maximum="100" 
                                      Value="{Binding Sharpness, Mode=TwoWay}"
                                      TickPlacement="None"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,12,0,0">
                                <Button Content="إعادة تعيين"
                                      Style="{StaticResource MaterialDesignFlatButton}"
                                      Command="{Binding ResetEnhancementsCommand}"/>
                                <Button Content="تطبيق"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Background="#4CAF50"
                                      BorderBrush="#4CAF50"
                                      Command="{Binding ApplyEnhancementsCommand}"
                                      Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" 
                                Mode="Light" 
                                Background="#E0E0E0"
                                Padding="16,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                         Text="{Binding StatusMessage}" 
                         FontSize="12"
                         VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal"
                          VerticalAlignment="Center"
                          Margin="0,0,16,0">
                    <TextBlock Text="المقياس: " 
                             FontSize="11" 
                             Foreground="#666666"/>
                    <TextBlock Text="{Binding PixelScale, StringFormat='{0:F2} μm/px'}" 
                             FontSize="11" 
                             FontWeight="SemiBold"
                             Foreground="#1976D2"/>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                          Orientation="Horizontal"
                          VerticalAlignment="Center">
                    <TextBlock Text="الإحداثيات: " 
                             FontSize="11" 
                             Foreground="#666666"/>
                    <TextBlock Text="{Binding MouseCoordinates}" 
                             FontSize="11" 
                             FontWeight="SemiBold"
                             Foreground="#1976D2"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>