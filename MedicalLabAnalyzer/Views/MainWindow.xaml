<Window x:Class="MedicalLabAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="محلل المختبرات الطبية - Medical Lab Analyzer AI"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI, Arial"
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Custom Styles for Medical Theme -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="BorderRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#BBDEFB"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatusIconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>

        <!-- Animation Resources -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="-300" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="ContentFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ContentFadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <materialDesign:DialogHost Identifier="MainDialogHost" CloseOnClickAway="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>  <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Content -->
                <RowDefinition Height="32"/>  <!-- Status Bar -->
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/> <!-- Sidebar -->
                <ColumnDefinition Width="*"/>   <!-- Main Content -->
            </Grid.ColumnDefinitions>

            <!-- Header Bar -->
            <materialDesign:ColorZone Grid.Row="0" Grid.ColumnSpan="2" 
                                    Mode="PrimaryDark" 
                                    materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="MedicalBag" 
                                               Width="32" Height="32" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="محلل المختبرات الطبية" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="AI-Powered Medical Analysis System" Style="{StaticResource SubHeaderTextStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Center - Current Page Title -->
                    <StackPanel Grid.Column="1" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentPageTitle}" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="White"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right Side - User Info and Actions -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        
                        <!-- AI Status -->
                        <Border Background="#4CAF50" 
                              CornerRadius="12" 
                              Padding="8,4" 
                              Margin="0,0,12,0"
                              Visibility="{Binding IsAISystemOnline, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Brain" 
                                                       Foreground="White" 
                                                       Style="{StaticResource StatusIconStyle}"/>
                                <TextBlock Text="AI نشط" 
                                         Foreground="White" 
                                         FontSize="10" 
                                         FontWeight="SemiBold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Database Status -->
                        <Border Background="#4CAF50" 
                              CornerRadius="12" 
                              Padding="8,4" 
                              Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Database" 
                                                       Foreground="White" 
                                                       Style="{StaticResource StatusIconStyle}"/>
                                <TextBlock Text="قاعدة البيانات" 
                                         Foreground="White" 
                                         FontSize="10" 
                                         FontWeight="SemiBold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Notifications -->
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                              Command="{Binding ShowNotificationsCommand}"
                              Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Bell" 
                                                   Foreground="White" 
                                                   Width="20" Height="20"/>
                            <materialDesign:BadgedAssist.Badge>
                                <Border Background="#F44336" 
                                      CornerRadius="10" 
                                      MinWidth="20" MinHeight="20"
                                      Visibility="{Binding NotificationCount, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}">
                                    <TextBlock Text="{Binding NotificationCount}" 
                                             Foreground="White" 
                                             FontSize="10" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                            </materialDesign:BadgedAssist.Badge>
                        </Button>

                        <!-- User Menu -->
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                              Name="UserMenuButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" 
                                                       Foreground="White" 
                                                       Width="20" Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentUser.FullName}" 
                                         Foreground="White" 
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="الملف الشخصي" 
                                            Command="{Binding ShowProfileCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="AccountSettings"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="الإعدادات" 
                                            Command="{Binding ShowSettingsCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Settings"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="تسجيل الخروج" 
                                            Command="{Binding LogoutCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Logout"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Sidebar Navigation -->
            <materialDesign:Card Grid.Row="1" Grid.Column="0" 
                               materialDesign:ElevationAssist.Elevation="Dp2" 
                               Margin="0,0,4,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="8">
                        <!-- Dashboard -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="لوحة التحكم" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Patient Management -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="Patients">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="إدارة المرضى" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Exam Management -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="Exams">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Microscope" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="إدارة الفحوصات" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,8"/>

                        <!-- CASA Analysis -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="CASA">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="VideoBox" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="تحليل CASA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Medical Image Analysis -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="ImageAnalysis">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ImageSearch" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="تحليل الصور الطبية" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Blood Tests -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="BloodTests">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Water" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="فحوصات الدم" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Urine & Stool Tests -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="BodyFluidTests">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TestTube" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="فحوصات السوائل" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,8"/>

                        <!-- Reports -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="Reports">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileChart" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="التقارير" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Calibration -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="Calibration">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tune" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="المعايرة" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,8"/>

                        <!-- User Management (Admin Only) -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="UserManagement"
                              Visibility="{Binding CanManageUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountCog" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="إدارة المستخدمين" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- System Settings (Admin Only) -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="SystemSettings"
                              Visibility="{Binding CanManageSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="إعدادات النظام" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- AI Model Management -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="AIModels"
                              Visibility="{Binding CanManageAI, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Brain" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="إدارة نماذج AI" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,8"/>

                        <!-- About -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                              Command="{Binding ShowAboutCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Information" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="حول البرنامج" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Main Content Area -->
            <materialDesign:Card Grid.Row="1" Grid.Column="1" 
                               materialDesign:ElevationAssist.Elevation="Dp1" 
                               Margin="4,0,0,0"
                               Padding="0">
                <Frame Name="MainContentFrame" 
                     NavigationUIVisibility="Hidden"
                     Background="White">
                    <Frame.RenderTransform>
                        <TranslateTransform/>
                    </Frame.RenderTransform>
                </Frame>
            </materialDesign:Card>

            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" Grid.ColumnSpan="2" 
                                    Mode="Light" 
                                    Background="#E0E0E0">
                <Grid Margin="16,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="{Binding StatusMessage}" 
                                 FontSize="11" 
                                 Foreground="#666666"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Center Progress -->
                    <StackPanel Grid.Column="1" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar Width="200" Height="4" 
                                   IsIndeterminate="{Binding IsProcessing}"
                                   materialDesign:TransitionAssist.DisableTransitions="True"/>
                        <TextBlock Text="{Binding ProcessingMessage}" 
                                 FontSize="10" 
                                 Foreground="#666666"
                                 HorizontalAlignment="Center"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Right Status -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}" 
                                 FontSize="11" 
                                 Foreground="#666666"
                                 VerticalAlignment="Center"
                                 Margin="0,0,16,0"/>
                        
                        <TextBlock Text="مستخدم نشط:" 
                                 FontSize="11" 
                                 Foreground="#666666"
                                 VerticalAlignment="Center"
                                 Margin="0,0,4,0"/>
                        
                        <TextBlock Text="{Binding ActiveUsersCount}" 
                                 FontSize="11" 
                                 FontWeight="SemiBold"
                                 Foreground="#1976D2"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>